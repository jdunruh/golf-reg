mixin _event-form
   if event._id
      input(type="hidden", name="_id", value= event._id)
   if errors.name
      .error
         = errors.name.msg
   label event name
      input(type="text", name="name", value= event.name, required)
   if errors.date
      .error
         = errors.date.msg
   label Event Date
      input(type="date", name="date", class="datepicker", value= event.dateToHTMLValue(), required)
   if errors.location
      .error
         = errors.location.msg
   label Event Location
      input(type="text", name="location", value= event.location, required)
