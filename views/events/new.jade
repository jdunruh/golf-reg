extends ../common/layout
block title
    title Add New Event
block content
    h1 Add New Event
    include ./_event-form
    include ./_flight-form
    form(action="/events" method="post")
        +_event-form(event, errors)
        .flights
            each flight, index in event.flights
                if errors.flights
                    +_flight-form(flight, errors.flights[index], index, "", true)
                else
                    +_flight-form(flight, {}, index, true)
        button(type="submit" class="btn") Create Event
        button(class="add-flight", class="btn") Add Another Time
    a(href= "#{referrer}") Back
    #template
        +_flight-form({}, {}, 0, "", true)
