extends ../common/layout.jade

block title
    title All Players
block content
    #content
        h1 All Players
        table
            thead
                tr
                    td email
                    td Name
                    td Registered?
                    td
                    td
                    td
            tbody
                each player in players
                    tr
                        td= player.email
                        td= player.name
                        td= player.registered ? "true" : "false"
                        td
                            a(href = "/players/#{player.id}") show
                        td
                            a(href="/players/#{player.id}/edit") edit
                        td
                            a(href="/players/#{player.id}/delete" class="delete-link") delete

